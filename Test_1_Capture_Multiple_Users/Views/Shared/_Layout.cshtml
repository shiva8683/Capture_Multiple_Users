@using Test_1_Capture_Multiple_Users.Enums
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users -@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")

    <script src="~/MVCGridHandler.axd/script.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    <link href="~/Content/toastr.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="mainSideBarMenu">
        @Html.ActionLink("Users Inventory", "Index", "Users", null, new { @class = "navbar-brand" })
        @*<a class="navbar-brand" href="#">Navbar</a>*@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Users", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Create User", "CreateUser", "Users", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content pt-2">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Users Inventory Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/toastr.js"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">

        $(document).ready(function () {
            var navLinks = $("#mainSideBarMenu").find('.nav-link');
            navLinks.each(function (index, item) {
                var currentNavLinkHref = $(item).attr("href").toLowerCase();
                if (window.location.pathname.toLowerCase() == currentNavLinkHref.toLowerCase()) {
                    $(item).addClass("active font-weight-bold");
                }
            });
        });
    </script>
</body>
</html>


@if (TempData.ContainsKey(ToastrNotificationsEnum.ValidationOrException.ToString()) == true)
{
    <script type="text/javascript">
        $(document).ready(function () {
            customToastr.OnValidationOrException(`@Test_1_Capture_Multiple_Users.Helpers.TempDataExtensions.GetToastrMessageValue(TempData,ToastrNotificationsEnum.ValidationOrException)`);
        });
    </script>
}
@if (TempData.ContainsKey(ToastrNotificationsEnum.Success.ToString()) == true)
{
    <script type="text/javascript">
        $(document).ready(function () {
            customToastr.OnSuccess(`@Test_1_Capture_Multiple_Users.Helpers.TempDataExtensions.GetToastrMessageValue(TempData,ToastrNotificationsEnum.Success)`);
        });
    </script>
}